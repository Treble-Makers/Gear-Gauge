@model YourNamespace.Models.CommentViewModel

<div class="panel panel-primary" style="margin: 20px;">
    <div class="panel-heading">
        <h3 class="panel-title">Comment Form</h3>
    </div>
    <div class="panel-body">
        <div class="col-md-6 col-sm-6">
            @using (Html.BeginForm("PostComment", "Comment", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group col-md-6 col-sm-6">
                    <label for="name">Name*</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control input-sm", required = "required" })
                </div>
                <div class="form-group col-md-6 col-sm-6">
                    <label for="email">Email*</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-sm", type = "email", required = "required" })
                </div>
                <div class="form-group col-md-6 col-sm-6">
                    <label for="comment">Comment*</label>
                    @Html.TextAreaFor(m => m.Comment, new { @class = "form-control input-sm", cols = "3", rows = "3", required = "required" })
                </div>
                <div class="form-group col-md-6 col-sm-6">
                    <br />
                    <br />
                    <button type="submit" class="btn btn-success">Post</button>
                </div>
            }
        </div>
        <div class="col-md-6 col-sm-6">
            @foreach (var item in Model.Comments)
            {
                <div class="commentbox">
                    <b>@item.Name</b>&nbsp;(@item.Email):<br />
                    @item.Comment<br />
                </div>
            }
        </div>
    </div>
</div>
