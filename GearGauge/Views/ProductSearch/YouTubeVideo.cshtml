@model GearGauge.ViewModels.YouTubeSearchViewModel

<!DOCTYPE html>
<html>
<head>
    <title>YouTube Video Search</title>
</head>
<body>
    <h1>Search YouTube Videos</h1>
    <form asp-action="Search" method="post">
        <label for="searchTerm">Search Term:</label>
        <input type="text" id="searchTerm" name="SearchTerm" asp-for="SearchTerm"/>
        <button type="submit">Search</button>
    </form>

    @if (Model.SearchTerm != null)
    {
        <h2>Search Results for: "@Model.SearchTerm"</h2>
        @if (ViewBag.Videos != null)
        {
            <ul>
                @foreach (var video in ViewBag.Videos as List<GearGauge.Models.VideoDetails>)
                {
                    <li>
                        <a href="@video.Link">@video.Title</a> (Published: @video.PublishedAt?.ToString("yyyy-MM-dd"))
                        <br />
                        <img src="@video.Thumbnail" alt="@video.Title thumbnail" />
                    </li>
                }
            </ul>
        }
        else
        {
            <p>No videos found.</p>
        }
    }
</body>
</html>