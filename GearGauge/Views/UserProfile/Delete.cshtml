@using GearGauge.ViewModels
@model UserProfileUpdateViewModel

<h1>Delete Profile</h1>

<form asp-action="DeleteProfile" method="post">
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="ProfilePicture"></label>
        <div>
            <img src="@Model.ProfilePicture" alt="Profile Picture" class="img-thumbnail" />
        </div>
    </div>

    <button type="submit" class="btn btn-danger">Delete Profile</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



