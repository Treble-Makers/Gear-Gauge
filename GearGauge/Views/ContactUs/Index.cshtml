

@model GearGauge.ViewModels.ContactUsViewModel 
    <h1>Contact Us!</h1>

   <div>
    <form method="post">
        <div class="form-group">
            <label asp-for="UserName">UserName</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-asp-validation-for="UserName"
            class="text-muted"></span>
        </div>
        <div class="form-group">
            <label asp-for="ContactEmail">Email</label>
            <input asp-for="ContactEmail" class="form-control" />
            <span asp-asp-validation-for="ContactEmail"
            class="text-muted"></span>
        </div>
        <div class="form-group">
            <textarea rows="10" cols="50" placeholder="Message"></textarea>
            <span asp-asp-validation-for="MessageBody"
            class="text-muted"></span>
        </div>
        <div>
            <button type="submit" class="btn btn-success">Send</button>
        </div>
    </form>
   </div>
   <div>

        @if (ViewBag.MessageBody != null)
        {
            <div>@ViewBag.MessageBody</div>
        }
  </div>