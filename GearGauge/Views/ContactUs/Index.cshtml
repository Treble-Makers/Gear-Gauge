@model GearGauge.ViewModels.ContactUsViewModel

<h1>Contact Us!</h1>

<form id="contactForm" asp-controller="Home" asp-action="ContactUs" method="post">
    <!-- Form fields -->
    <div class="form-group">
        <label asp-for="UserName">UserName</label>
        <input asp-for="UserName" class="form-control" />
        <span asp-asp-validation-for="UserName" class="text-muted"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactEmail">Email</label>
        <input asp-for="ContactEmail" class="form-control" />
        <span asp-asp-validation-for="ContactEmail" class="text-muted"></span>
    </div>
    <div class="form-group">
        <textarea id="message" asp-for="MessageBody" rows="10" cols="50" placeholder="Message"></textarea>
        <span asp-asp-validation-for="MessageBody" class="text-muted"></span>
    </div>
    <div>
        <button id="submitButton" type="submit" class="btn btn-success">Send</button>
    </div>
</form>

<div id="thankYouMessage" style="display:none;">
    <h2>Thank You!</h2>
    <p>Your message has been successfully sent.</p>
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Return to Home Page</a>
</div>

@section Scripts {
    <script>
        
        document.getElementById("contactForm").addEventListener("submit", function (event) {
            event.preventDefault(); 

            setTimeout(function () {
                
                document.getElementById("contactForm").style.display = "none";
                document.getElementById("thankYouMessage").style.display = "block";
            }, 1000);

            return false; 
        });
    </script>
}
