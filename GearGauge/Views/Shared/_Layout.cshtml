    <script>
        // Add animated class to navbar on scroll
        $(window).scroll(function () {
            var scroll = $(window).scrollTop();
            if (scroll > 50) {
                $(".navbar").addClass("animated");
            } else {
                $(".navbar").removeClass("animated");
            }
        });
    </script>
