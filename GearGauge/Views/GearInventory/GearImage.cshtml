@model GearGauge.Models.GearImage

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Images</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create"></form>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group"></div>
        <label asp-for="UserId" class="control-label"></label>
        <input asp-for="UserId" class="form-control" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
        <div class="form-group"></div>
        <label asp-for="ImageAltDescription" class="control-label"></label>
        <input asp-for="ImageAltDescription" class="form-control" />
        <span asp-validation-for="ImageAltDescription" class="text-danger"></span>
    </div>
        <div class="form-group"></div>
        <label asp-for="ImageFile" class="control-label"></label>
        <input asp-for="ImageFile" accept="image/*" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</div>