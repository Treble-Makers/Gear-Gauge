@model GearGauge.ViewModels.AddGearInventoryViewModel

<h1>Add Gear Inventory</h1>

<form asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MarketValue"></label>
        <input asp-for="MarketValue" class="form-control" />
        <span asp-validation-for="MarketValue" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageFile"></label>
        <input asp-for="ImageFile" type="file" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SelectedTagIds"></label>
        <select asp-for="SelectedTagIds" class="form-control" asp-items="@(new MultiSelectList(Model.AvailableTags, "Value", "Text"))" multiple="multiple"></select>
        <span asp-validation-for="SelectedTagIds" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Gear</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

