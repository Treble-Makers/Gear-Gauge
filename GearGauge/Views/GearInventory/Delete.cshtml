@using GearGauge.ViewModels
@model GearInventory


<h1>Delete Gear Inventory</h1>

<form method="post">
    @foreach (var evt in ViewBag.gearInventories)
    {
        <div class="form-group">
            <label>
                <span>@evt.Title</span>
                <input type="checkbox" name="gearInventoryIds" value="@evt.Id" />
            </label>
        </div>
    }

        <input type="submit" value="Delete Selected Gear Inventory" class="btn btn-danger" />
</form>