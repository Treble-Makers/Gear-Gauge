@using GearGauge.Models;
@model List<GearInventory>

<h1>Gear Inventory</h1>

<p>
    <a asp-controller="GearInventory" asp-action="Add">Add New Gear</a>
</p>

<table class="table">
    <thead>
        <tr>
            
            <th>Title</th>
            <th>Description</th>
            <th>Market Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.MarketValue</td>
                   <td>@if (item.Image != null)
                    {
                        <img src="data:image/png;base64,@Convert.ToBase64String(item.Image)" alt="Image" style= "max-width: 200px;" />
                    }
                </td>
                <td>
                    <a asp-controller="GearInventory" asp-action="Details" asp-route-id="@item.Id">View</a> |
                    <a asp-controller="GearInventory" asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                    <a asp-controller="Favorites" asp-action="AddToFavorites" asp-route-id="@item.Id">Add to favorites</a> 
                    @* <a asp-controller="Favorites" asp-action="AddToFavorites" method="post" asp-route-id="@item.Id">Add to Favorites</a> *@
                </td>
            </tr>
        }
    </tbody>
</table>