@using GearGauge.ViewModels
@model EditGearInventoryViewModel
@{
  Layout = "_Layout";
}


<h1>Gear Details: </h1>

<p>Title: @Model.Title</p>
<p>Description: @Model.Description</p>
<p>MarketValue: @Model.MarketValue</p>
<p>Image: <img src="data:image/png;base64,@Convert.ToBase64String(Model.Image)"> </p>

<a href="/GearInventory/Edit/@Model.Id">Edit this entry</a>
<br>

<p>@Html.ActionLink("Delete this entry", "Delete", new { id = Model.Id })</p>